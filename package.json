{
  "name": "local-identity-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Local OIDC Identity Provider using node-oidc-provider",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"tsx\" src/index.ts",
    "start": "node dist/index.js",
    "setup:db": "node --loader ts-node/esm src/database/setup.ts",
    "migrate:multi-tenant": "tsx src/scripts/migrate-to-multi-tenant.ts",
    "test:multi-tenant": "tsx scripts/test-multi-tenant.ts",
    "provision-client": "tsx scripts/provision-client.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "oidc",
    "identity",
    "provider",
    "oauth2",
    "typescript"
  ],
  "author": "Connor Hoehn",
  "license": "MIT",
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/qrcode": "^1.5.5",
    "authenticator": "^1.1.5",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "jose": "^5.2.2",
    "oidc-provider": "^7.12.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.13",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/authenticator": "^1.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2"
  },
  "ts-node": {
    "esm": true
  }
}
